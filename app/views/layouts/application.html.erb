<!DOCTYPE html>
<html lang='en'>
  <head>
    <%= render 'shared/head' -%>
  </head>

  <body class='<%= body_class -%> <%= yield :extra -%>'>
    <div id='header' class='wrapper'>
      <%= render 'shared/header' -%>
      <%= link_to "sign out: #{current_user}", sign_out_url, :class => "sign_out" if current_user %>
    </div>
    <div id='page-bg'>
      <div id='content'>
        <div class='content-header'>
          <%= yield :header -%>
        </div>

        <%= yield :subnav -%>

        <%= render 'shared/flashes' %>

        <div id='main-content'>
          <%= yield -%>
        </div>

        <div id='bottom-corner'></div>
      </div>

    </div>

    <div class='bottom-links'>
      <%= yield :bottom -%>
    </div>

    <%= render 'shared/footer' %>
    <%= render 'shared/javascript' %>
  </body>
</html>
